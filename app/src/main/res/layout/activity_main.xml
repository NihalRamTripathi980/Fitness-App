<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#BC5231" />


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#6481FA"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:background="#FFFFFF"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="26dp">

                        <LinearLayout
                            android:id="@+id/linearLayoutYoga"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#FFFFFF"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="210dp"
                                android:scaleType="centerCrop"
                                app:srcCompat="@drawable/women_men" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="FEMALE"
                                android:textColor="#000000"
                                android:textSize="30sp"
                                android:textStyle="bold|italic" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="35dp"
                        android:background="#FFFFFF"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="26dp">

                        <LinearLayout
                            android:id="@+id/linearLayoutExercise"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#FFFFFF"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="210dp"
                                android:scaleType="centerCrop"
                                app:srcCompat="@drawable/men_main" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="MALE"
                                android:textColor="#000000"
                                android:textSize="30sp"
                                android:textStyle="bold|italic" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="35dp"
                        android:layout_marginBottom="25dp"
                        android:background="#FFFFFF"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="26dp">

                        <LinearLayout
                            android:id="@+id/linearLayoutWarmUp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#FFFFFF"
                            android:gravity="center"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#554B4B"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView

                                    android:layout_width="150dp"
                                    android:layout_height="210dp"
                                    android:src="@drawable/video_camera" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tutorials"
                                android:textColor="#000000"
                                android:textSize="30sp"
                                android:textStyle="bold|italic" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </ScrollView>


        </LinearLayout>



